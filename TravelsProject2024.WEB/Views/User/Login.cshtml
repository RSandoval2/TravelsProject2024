@model TravelsProject2024.EN.User

@{
    ViewData["Title"] = "Inicio de sesión";
}

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 40px;
    }

    .form-control {
        border-radius: 25px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .btn-primary,
    .btn-outline-primary {
        border-radius: 25px;
        padding: 15px 30px;
        font-weight: bold;
    }

    .btn-outline-primary {
        border: 2px solid #007bff;
    }
</style>

<div class="container mt-5">
    <!-- Agregamos mt-5 para añadir margen superior -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center mb-4">Inicio de sesión</h1>
                    <form asp-action="Login" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group text-center">
                            <label asp-for="Login" class="control-label">Usuario</label>
                            <input asp-for="Login" class="form-control" required />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <label asp-for="Password" class="control-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="row justify-content-center">
                                <div class="col">
                                    <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Register" class="btn btn-outline-success btn-block rounded-pill" style="height: 60px; line-height: 60px; padding-top: 0px; padding-bottom: 5px; padding-left: 40px; padding-right: 40px;">Registrarse</a>
                                </div>


                            </div>
                        </div>
                        <span class="text-danger">@ViewBag.Error</span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
